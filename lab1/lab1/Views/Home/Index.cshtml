@model ReportViewModel

@{
    ViewData["Title"] = "Report";
}

<div>
    <div class="row bottom-margin">
        @if (!Model.Frozen) {
            <div class="col">
                <a class="btn btn-primary" hidden="@(!Model.CanAddActivity)" asp-controller="Activity" asp-action="Add">
                    New activity
                </a>
            </div>
        }
        <div class="col">
            <form asp-action="ChangeDate" method="get">
                <div class="form-group">
                    <input asp-for="ChangeDateForm.Date" class="bottom-margin">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Change date
                    </button>
                </div>
            </form>
        </div>
        <div class="col">
            <h2>
                Overall time: @Model.OverallTime
            </h2>
        </div>
    </div>
    <div class="row bottom-margin">
        <div class="col">
            <form asp-action="ChangeUser">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="UserName">User name</span>
                    <input asp-for="UserName" class="form-control" aria-label="Sizing example input" aria-describedby="UserName">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Change user
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="row col">
        @foreach (var activity in Model.Activities) {
            <form method="get">
                <input type="hidden" asp-for="ReportOrigin.Month" value="@(Model.Origin.Month)"/>
                <input type="hidden" asp-for="ReportOrigin.Year" value="@(Model.Origin.Year)"/>
                <input type="hidden" asp-for="ReportOrigin.UserName" value="@(Model.Origin.UserName)"/>
                <input type="hidden" asp-for="ActivityId" value="@activity.Id"/>
                <div class="card" style="width: 18rem;">
                    <div class="card-body @(Model.Frozen ? "bg-light" : "bg-white")">
                        <h5 class="card-title">@activity.ProjectCode</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Date: @activity.Date</h6>
                        <p class="card-text">Time: @(activity.Time)</p>
                        <i>@activity.Description</i>

                        @if (!Model.Frozen) {
                            <button type="submit" class="btn btn-primary" asp-controller="Activity"
                                    asp-action="Edit">
                                Edit
                            </button>

                            <button type="submit"
                                    asp-action="Delete"
                                    asp-controller="Activity"
                                    class="btn btn-danger">
                                Delete
                            </button>
                        }
                    </div>
                </div>
            </form>
        }
    </div>
</div>