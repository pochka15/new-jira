@model EditActivityViewModel

@{
    ViewData["Title"] = "Edit activity";
}

<div>
    <form method="post">
        @Html.HiddenFor(m => m.ActivityId)
        @Html.HiddenFor(m => m.ReportOrigin.UserName)
        @Html.HiddenFor(m => m.ReportOrigin.Year)
        @Html.HiddenFor(m => m.ReportOrigin.Month)

        <div class="input-group mb-3">
            <span class="input-group-text" id="Project">Project</span>
            <select asp-for="ProjectCode" asp-items="Model.Projects">
                <option value="">Pick one</option>
            </select>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="SubprojectCode">Subproject code</span>
            <input asp-for="SubprojectCode" class="form-control" aria-label="Sizing example input" aria-describedby="SubprojectCode">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="SpentTime">SpentTime</span>
            <input asp-for="SpentTime" class="form-control" aria-label="Sizing example input" aria-describedby="SpentTime">
        </div>

        <span class="input-group-text">Description</span>
        <textarea asp-for="Description" class="form-control" aria-label="Description"></textarea>
        <button
            type="submit"
            asp-action="Edit"
            asp-controller="Activity"
            class="btn btn-primary">
            Submit
        </button>
    </form>
</div>